# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_APP=app.py
FLASK_ENV=development

# Database Configuration
# SQLite (default for development)
DATABASE_URL=sqlite:///website.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/website_db

# Babel/Language Configuration
BABEL_DEFAULT_LOCALE=en
BABEL_SUPPORTED_LOCALES=en,pl

# Application Settings
DEBUG=True

# Translation API Configuration
# Sign up at: https://www.deepl.com/pro-api
# Free tier: 500,000 characters/month (sufficient for most websites)
DEEPL_API_KEY=your-deepl-api-key-here
ENABLE_AUTO_TRANSLATION=True